<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/Blue</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:divider">@color/White</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:listDivider">@color/Yellow</item>
        <item name="android:editTextBackground">@color/Blue_clear</item>
       <!-- <item name="android:editTextColor">@color/White</item> -->


    </style>

    <style name="MyActionBarStyle" parent="android:Widget.Holo.ActionBar" >

        <item name="android:background">@color/Yellow</item>

    </style>
    <style name="MyTVStyle" parent="android:Widget.TextView">
        <item name="android:background">@color/White</item>
        <item name="android:textColor">@color/Black</item>
    </style>

</resources>
